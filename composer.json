{
	"name": "moxio/sqlite-extended-api",
	"type": "library",
	"description": "Exposes SQLite APIs that are otherwise not available in PHP",
	"license": "MIT",
	"keywords" : [ "sqlite", "sqlite3", "pdo", "ffi", "z-engine" ],
	"authors": [
		{
			"name": "Moxio",
			"homepage": "https://www.moxio.com"
		}
	],
	"autoload": {
		"psr-4": {
			"Moxio\\SQLiteExtendedAPI\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Moxio\\SQLiteExtendedAPI\\Test\\": "test/"
		}
	},
	"require": {
		"php": "^7.4 || ^8.0",
		"ext-FFI": "*",
		"lisachenko/z-engine": "^0.8.0 || ^0.9.1"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.1"
	}
}
